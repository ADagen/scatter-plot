{
  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es5",
      "es6"
    ]
  },
  "include": [
      "src"
  ],
  "exclude": [
    "build-tools/**/*",
    "config/**/*"
  ]
}