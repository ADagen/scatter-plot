{
  "compilerOptions": {
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "esnext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es6",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components/*"],
      "core/*": ["src/core/*"],
      "dataLayer/*": ["src/dataLayer/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build-tools",
    "config",
    "**/*.spec.ts"
  ]
}